
@{ 
    var user = @Url.Action("IsAuthenticated", "Account");
}

<ul class="navbar-nav">
    @if (user!=null)
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index">@user</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index","Home")">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Index","Home")">Login</a>
        </li>
    }
</ul>